	myList.add(4);
	myList.add(5);
	myList.add(6);
	myList.add(7);
	myList.add(8);
	myList.add(9);
	
	pageContext.setAttribute("numbs", myList);
	%>	
	<c:forEach items="${numbs }" var="i" begin="1" end="9" step="1">
		${i }
	
	</c:forEach>


